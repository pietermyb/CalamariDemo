@model IEnumerable<Calamari.Models.Product>

@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <br />
    <div class="row marketing panel panel-info">
        <br />
        <div class="container-fluid">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="thumbnail">
                        <div class="thumbnail-container">
                            <a href="/Products/Details/@(item.Id)">
                                <img src="~/Content/Images/@(item.Id).jpg" class="img img-thumbnail" style="height: 140px;" />
                            </a>
                        </div>
                        <div class="caption">
                            <h3>@Html.DisplayFor(modelItem => item.Name) </h3>
                            <h4>R @Html.DisplayFor(modelItem => item.Price)</h4>
                            <h5>@Html.DisplayFor(modelItem => item.Description)</h5>
                        </div>
                        <div class="btn btn-group">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-info" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="panel panel-info">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
    </div>
</body>
</html>